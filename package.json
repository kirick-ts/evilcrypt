{
	"name": "evilcrypt",
	"version": "0.2.2-beta.2",
	"description": "Collection of crypto functions.",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/esm/main.js",
	"types": "dist/esm/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"engines": {
		"node": ">=14.13.1"
	},
	"dependencies": {},
	"devDependencies": {
		"@kirick/eslint-config": "latest",
		"@types/node": "^20.14.10",
		"eslint": "9.10.0",
		"typescript": "5.5.4",
		"vitest": "2.1.1"
	},
	"scripts": {
		"build": "bun run build:ts && bun run build:cjs",
		"#-build:cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/main.cjs dist/esm/main.js",
		"build:cjs": "bun build dist/esm/main.js --target node --format cjs --packages external --outdir dist ; mv dist/main.js dist/main.cjs",
		"build:ts": "rm -r dist/esm dist/types ; tsc",
		"lint": "eslint . && tsc --skipLibCheck --noemit",
		"publish:npm": "bun run build && bun run lint && bun run test && npm publish",
		"test": "npm run test:vitest && bun test --coverage",
		"test:vitest": "vitest run --no-file-parallelism"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/evilcrypt.git"
	},
	"keywords": [
		"crypto",
		"aes",
		"sha256",
		"pbkdf2"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/evilcrypt/issues"
	},
	"homepage": "https://github.com/kirick13/evilcrypt#readme"
}
