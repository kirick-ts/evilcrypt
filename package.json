{
	"name": "evilcrypt",
	"version": "0.2.0-beta.2",
	"description": "Collection of crypto functions",
	"main": "src/main.js",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"browser": "./dist/browser/main.min.js",
				"default": "./src/main.js"
			},
			"require": "./dist/evilcrypt.cjs"
		}
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.21.8",
		"eslint": "8.41.0",
		"eslint-config-xo": "0.43.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "47.0.0",
		"jest": "^29.7.0"
	},
	"scripts": {
		"test": "npm run test-node && bun test",
		"test-node": "NODE_OPTIONS=--experimental-vm-modules jest",
		"build": "bun run build-cjs",
		"build-cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/evilcrypt.cjs src/main.js",
		"npm-publish": "bun run build && npm test && npm publish --tag beta"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/evilcrypt.git"
	},
	"keywords": [
		"crypto",
		"aes",
		"sha256",
		"pbkdf2"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/evilcrypt/issues"
	},
	"homepage": "https://github.com/kirick13/evilcrypt#readme"
}
